    <!-- Build Settings -->
  	<build>
		<plugins>
	  	<plugin>
	   		<artifactId>maven-deploy-plugin</artifactId>
	   		<version>2.8.1</version>
		    <executions>
		      <execution>
		         <id>default-deploy</id>
		         <phase>deploy</phase>
		         <goals>
		            <goal>deploy</goal>
		         </goals>
		      </execution>
		    </executions>
		</plugin>
		</plugins>
		
		<resources>
        <resource>
            <directory>src/main/java</directory>
            <includes>                      
                <include>**/*.xml</include>
            </includes>
        </resource>
        <resource>
            <directory>src/main/resources</directory>
        </resource>
    </resources>
		
	</build>
  
